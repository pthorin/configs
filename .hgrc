[ui]
username=petert
editor=vim
style=default
merge = kdiff3
# vimdiff

[merge-tools]
#vimdiff.executable = mvim
#vimdiff.args = -d $base $local $output $other +close +close
#vimdiff.args = -d $base $local $output $other -c "wincmd J"

[extensions]
graphlog=
color=
prompt=~/utils/hg-prompt/prompt.py
mq=
pager=
purge=

[alias]
dlog=log --style=/Users/petert/utils/mercurial-cli-templates/map-cmdline.dlog
slog=log --style=/Users/petert/utils/mercurial-cli-templates/map-cmdline.slog
nlog=log --style=/Users/petert/utils/mercurial-cli-templates/map-cmdline.nlog
sglog=glog --style=/Users/petert/utils/mercurial-cli-templates/map-cmdline.sglog
stat=diff --stat
#glog=sglog

[pager]
pager = LESS='FSRX' less
attend = slog, nlog, log, glog, sglog, dlog, diff, status
